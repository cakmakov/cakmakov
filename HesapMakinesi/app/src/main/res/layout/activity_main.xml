<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:id="@+id/sayi_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="58dp"
        android:text="1"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/sayi_4"
        android:layout_alignStart="@+id/sayi_4" />

    <Button
        android:id="@+id/sayi_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/sayi_1"
        android:layout_alignBottom="@+id/sayi_1"
        android:layout_centerHorizontal="true"
        android:text="2" />

    <Button
        android:id="@+id/sayi_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/sayi_2"
        android:layout_alignBottom="@+id/sayi_2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="3" />

    <Button
        android:id="@+id/sayi_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/sayi_1"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="27dp"
        android:text="4" />

    <Button
        android:id="@+id/sayi_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/sayi_2"
        android:layout_alignRight="@+id/sayi_2"
        android:layout_alignTop="@+id/sayi_4"
        android:text="5" />

    <Button
        android:id="@+id/sayi_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sayi_3"
        android:layout_alignStart="@+id/sayi_3"
        android:layout_alignTop="@+id/sayi_5"
        android:text="6" />

    <Button
        android:id="@+id/sayi_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sayi_4"
        android:layout_alignStart="@+id/sayi_4"
        android:layout_below="@+id/sayi_4"
        android:layout_marginTop="26dp"
        android:text="7" />

    <Button
        android:id="@+id/sayi_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sayi_5"
        android:layout_alignStart="@+id/sayi_5"
        android:layout_alignTop="@+id/sayi_7"
        android:text="8" />

    <Button
        android:id="@+id/sayi_9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/sayi_8"
        android:layout_alignEnd="@+id/sayi_6"
        android:layout_alignRight="@+id/sayi_6"
        android:text="9" />

    <Button
        android:id="@+id/sayi_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sayi_7"
        android:layout_alignStart="@+id/sayi_7"
        android:layout_below="@+id/sayi_7"
        android:layout_marginTop="27dp"
        android:text="0" />

    <Button
        android:id="@+id/sayi_topla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/sayi_0"
        android:layout_alignBottom="@+id/sayi_0"
        android:layout_alignLeft="@+id/sayi_8"
        android:layout_alignStart="@+id/sayi_8"
        android:text="TOPLA" />

    <Button
        android:id="@+id/sayi_cikar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/sayi_9"
        android:layout_alignRight="@+id/sayi_9"
        android:layout_alignTop="@+id/sayi_topla"
        android:text="ÇIKAR" />

    <Button
        android:id="@+id/sayi_carp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sayi_0"
        android:layout_alignStart="@+id/sayi_0"
        android:layout_below="@+id/sayi_0"
        android:layout_marginTop="33dp"
        android:text="ÇARP" />

    <Button
        android:id="@+id/sayi_bol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/sayi_topla"
        android:layout_alignRight="@+id/sayi_topla"
        android:layout_alignTop="@+id/sayi_carp"
        android:text="BÖL" />

    <Button
        android:id="@+id/sayi_sil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sayi_cikar"
        android:layout_alignStart="@+id/sayi_cikar"
        android:layout_alignTop="@+id/sayi_bol"
        android:text="SİL" />

    <Button
        android:id="@+id/hesapla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sayi_carp"
        android:layout_alignStart="@+id/sayi_carp"
        android:layout_below="@+id/sayi_carp"
        android:layout_marginTop="27dp"
        android:text="HESAPLA" />

    <TextView
        android:id="@+id/girisEkrani"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/sayi_2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp" />
</RelativeLayout>